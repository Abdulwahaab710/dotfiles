;; Set cmd on "d" due to cmd+r, cmd+f
(deflayer main
  ;;     a      s      d      f      g      h     j      k      l      ;      '
  XX     XX     XX     XX     XX     XX     XX    XX     XX     XX     XX     XX     XX
  XX     XX     XX     XX     XX     XX     XX    XX     XX     XX     XX     XX     XX     @msymb
  @mretu q      w      e      r      t      y     u      i      o      p      \      XX     \
  @mnavi @mlctl @msyst @mlmet @mlalt @mtrik h     @mralt @mrmet @mmous @mrctl @mral2 XX
  lsft   @mmtab @mmgrv @mcopy @mpast XX     n     XX     ,      @mhome /      XX     rsft
  XX    XX   XX   @msymb            @mhypr               XX        XX         XX     XX     XX
)

